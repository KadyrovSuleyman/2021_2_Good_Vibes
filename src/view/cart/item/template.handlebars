<div class="cart__image">
  <img class="cart__image-img" src="{{image}}" alt="${{name}}" />
</div>
<div class="cart__name">
  <div class="cart__link">
    <a href="/product?id={{id}}" class="link">
      {{name}}
    </a>
  </div>
  Кол-во:
  <input type="number" class="cart__qty-select" id="{{id}}" min="0" step="1">
  <button class="cart__delete" type="button" id="{{id}}">
    Удалить
  </button>
</div>
</div>
</div>
<div class="cart__price">
  ${{price}}
</div>