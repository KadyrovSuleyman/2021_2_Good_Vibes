<div class="auth" id="auth">
  <div class="auth-content" id="auth-content">
    <div class="auth-content-inner">
      <div class="auth-content-inner__title">
        <span>Создать аккаунт</span>
      </div>
      <form class="auth-content-form" id="auth-form">

        <div class="auth-content-form__content">
          <label for="login">Имя пользователя</label>
          <input
            class="auth-content-form__input auth-content-form__login"
            id="auth-login"
            type="login"
            placeholder="Логин"
          />
        </div>

        <div class="auth-content-form__content">
          <label for="email">Электронная почта</label>
          <input
            class="auth-content-form__input auth-content-form__email"
            id="auth-email"
            type="email"
            placeholder="Почта"
          />
        </div>

        <div class="auth-content-form__content">
          <label for="password">Пароль</label>
          <input
            class="auth-content-form__input auth-content-form__password"
            id="auth-password"
            type="password"
            placeholder="Придумайте пароль"
          />
          <input
            class="auth-content-form__input auth-content-form__confirm-password"
            id="auth-confirm-password"
            type="password"
            placeholder="Повторите пароль"
          />
        </div>
        <div class="auth-content-inner__error" id="auth-error">
          <span></span>
        </div>
        <button
          class="auth-content-form__button"
          type="submit"
        >Зарегистрироваться</button>
      </form>
      <div class="auth-content-form-signin">
        <span>Уже есть аккаунт?</span>
        <a
          href="/signin"
          class="auth-content-form-signin__link"
          data-action="regClick"
        >Войти</a>
      </div>
    </div>
  </div>
</div>